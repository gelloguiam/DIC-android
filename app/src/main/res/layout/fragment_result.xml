<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelloguiam.insectrecognition.ResultFragment"
    android:background="@drawable/insect_pattern_repeat"
    android:tileMode="repeat"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/image_captured_preview_wrapper"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="15dp">

            <ImageView
                android:id="@+id/image_captured_preview"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/wikipedia"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/results_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <Button
                    android:id="@+id/guess_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guess 1"
                    android:radius="100dp"
                    android:textSize="25sp"
                    android:background="@drawable/round_button"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="18dp"/>

                <Button
                    android:id="@+id/guess_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guess 1"
                    android:radius="100dp"
                    android:textSize="25sp"
                    android:background="@drawable/round_button"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="18dp"/>

                <Button
                    android:id="@+id/guess_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Guess 1"
                    android:radius="100dp"
                    android:textSize="25sp"
                    android:background="@drawable/round_button"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20dp"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="18dp"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
                <ImageButton
                    android:id="@+id/read_more"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:layout_margin="10dp"
                    android:src="@drawable/label" />
        </RelativeLayout>
</LinearLayout>

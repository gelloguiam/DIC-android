<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gelloguiam.insectrecognition.ResultFragment"
    android:background="@color/white"
    android:orientation="vertical">

        <FrameLayout
            android:id="@+id/image_captured_preview_wrapper"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="50px"
            android:layout_marginBottom="50px">

            <ImageView
                android:id="@+id/image_captured_preview"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:src="@drawable/wikipedia"/>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/results_wrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <Button
                    android:id="@+id/guess_1"
                    android:layout_width="500px"
                    android:layout_height="wrap_content"
                    android:text="Guess 1"
                    android:radius="100dp"
                    android:textSize="30sp"
                    android:background="@drawable/round_button"
                    android:textColor="@color/white"
                    android:layout_marginBottom="40px"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="25px"/>

                <Button
                    android:id="@+id/guess_2"
                    android:layout_width="400px"
                    android:layout_height="wrap_content"
                    android:text="Guess 1"
                    android:textSize="27sp"
                    android:background="@drawable/round_button"
                    android:textColor="@color/white"
                    android:layout_marginBottom="40px"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="25px"/>

                <Button
                    android:id="@+id/guess_3"
                    android:layout_width="300px"
                    android:layout_height="wrap_content"
                    android:text="Guess 1"
                    android:textSize="23sp"
                    android:background="@drawable/round_button"
                    android:textColor="@color/white"
                    android:layout_marginBottom="20px"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:padding="23px"/>

        </LinearLayout>

</LinearLayout>
